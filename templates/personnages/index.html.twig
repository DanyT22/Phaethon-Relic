{% extends 'base.html.twig' %}

{% block title %}Personnages{% endblock %}

{% block body %}

    <div class="bg-black flex items-center justify-center p-8 my-8">
        <h1 class="text-center text-2xl text-white"> Personages </h1>
    </div>

    <div class="bg-black flex flex-col items-center justify-center gap-4 py-4 my-8"> 
        <div class="flex flex-col items-center justify-center md:flex-row gap-4 md:gap-8">
            <div class="flex gap-2">
            <button>
                <img src="{{ asset('images/raretes/S.jpg') }}" class= "h-8 w-8">
            </button>
            <button>
                <img src="{{ asset('images/raretes/A.jpg') }}" class= "h-8 w-8">
            </button>
            </div>
            <div class="flex gap-2">
                {% for element in elements %}
                    <button>
                        <img src="{{ asset('images/elements/' ~ element.element|replace({' ': '_'}) ~ '.jpg') }}" class= "h-8 w-8">
                    </button>
                {% endfor %}
            </div>
            <div class="flex gap-2">
                {% for specialite in specialites %}
                    <button>
                        <img src="{{ asset('images/specialites/' ~ specialite.specialite|replace({' ': '_'}) ~ '.jpg') }}" class= "h-8 w-8">
                    </button>
                {% endfor %}
            </div>
        </div>
        <div class="flex flex-wrap gap-4">
            {% for faction in factions %}
                <button>
                    <img src="{{ asset('images/factions/' ~ faction.faction|replace({' ': '_'}) ~ '.jpg') }}" class= "h-8 w-8">
                </button>
            {% endfor %}
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 w-full h-full">
        {% for personnage in personnages %}

            <a href="{{ path('app_personnages_show', {'id': personnage.id}) }}">
                <div class="{{ personnage.element.element }} flex w-full p-[2%]">
                    <div class="flex items-center justify-center min-h-full w-1/4">
                        <img src="{{ asset('images/icon/' ~ personnage.nomPersonnage|replace({' ': '_'}) ~ '.jpg') }}" class= "w-36 rounded-lg">
                    </div>

                    <div class="flex flex-col justify-between w-3/4">
                        <div class="flex items-center justify-center h-full w-full">
                            <p class="text-center text-xl text-white truncate"> {{ personnage.nomPersonnage }} </p>
                        </div>

                        <div class="flex justify-around h-full w-full">
                            <div class="size-fit">
                                <img src="{{ asset('images/raretes/' ~ personnage.rarete.rarete|replace({' ': '_'}) ~ '.jpg') }}" class= "h-12 w-12">
                            </div>
                            <div class="size-fit">
                                <img src="{{ asset('images/specialites/' ~ personnage.specialite.specialite|replace({' ': '_'}) ~ '.jpg') }}" class= "h-12 w-12">
                            </div>
                            <div class="size-fit">
                                <img src="{{ asset('images/factions/' ~ personnage.faction.faction|replace({' ': '_'}) ~ '.jpg') }}" class= "h-12 w-12">
                            </div>
                        </div>
                    </div>
                </div>
            </a>

        {% endfor %}
    </div>

{% endblock %}
