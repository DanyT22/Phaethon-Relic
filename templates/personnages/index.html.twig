{% extends 'base.html.twig' %}

{% block title %}Personnages list{% endblock %}

{% block body %}
    <div class="filtre"> </div>

    <div class="">
        {% for personnage in personnages %}
            <a href="{{ path('app_personnages_show', {'id': personnage.id}) }}">
                <div class="{{ personnage.element.element }} sm:w-1/1 md:w-1/2 lg:w-1/4">
                <img src="{{ asset('images/icon/' ~ personnage.nomPersonnage|replace({' ': '_'}) ~ '.jpg') }}" class= "w-36">
                    <p> {{ personnage.nomPersonnage }}
                    <div>
                        <img src="{{ asset('images/raretes/' ~ personnage.rarete.rarete|replace({' ': '_'}) ~ '.jpg') }}" class= "w-24">
                        <img src="{{ asset('images/specialites/' ~ personnage.specialite.specialite|replace({' ': '_'}) ~ '.jpg') }}" class= "w-24">
                        <img src="{{ asset('images/factions/' ~ personnage.faction.faction|replace({' ': '_'}) ~ '.jpg') }}" class= "w-24">
                    </div>
                </div>
            </a>
        {% endfor %}
    </div>

{% endblock %}
