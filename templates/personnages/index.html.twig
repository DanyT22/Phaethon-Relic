{% extends 'base.html.twig' %}

{% block title %}Personnages list{% endblock %}

{% block body %}
<div class="bg-red flex items-center justify-center w-full p-8 my-8">
    <h1 class="text-center text-2xl text-white">Personnages</h1>
</div>
    <div class="filtre"> </div>

    <div class="grid grid-cols-3 gap-8 w-full h-full">
        {% for personnage in personnages %}
            <a href="{{ path('app_personnages_show', {'id': personnage.id}) }}">
                <div class="{{ personnage.element.element }} flex w-full p-[2%]">
                    <div class="h-full w-1/4">
                        <img src="{{ asset('images/icon/' ~ personnage.nomPersonnage|replace({' ': '_'}) ~ '.jpg') }}" class= "w-36 rounded-lg">
                    </div>
                    <div class="flex flex-col justify-between w-3/4">
                        <div class="flex items-center justify-center h-full w-full">
                            <p class="text-center text-xl text-white truncate"> {{ personnage.nomPersonnage }} </p>
                        </div>
                        <div class="flex justify-around h-full w-full">
                            <img src="{{ asset('images/raretes/' ~ personnage.rarete.rarete|replace({' ': '_'}) ~ '.jpg') }}" class= "h-12 w-12">
                            <img src="{{ asset('images/specialites/' ~ personnage.specialite.specialite|replace({' ': '_'}) ~ '.jpg') }}" class= "h-12 w-12">
                            <img src="{{ asset('images/factions/' ~ personnage.faction.faction|replace({' ': '_'}) ~ '.jpg') }}" class= "h-12 w-12">
                        </div>
                    </div>
                </div>
            </a>
        {% endfor %}
    </div>

{% endblock %}
