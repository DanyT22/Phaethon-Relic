{% extends 'base.html.twig' %}

{% block title %}Elements index{% endblock %}

{% block body %}
    <h1>Elements index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Element</th>
                <th>Icon</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for element in elements %}
            <tr>
                <td>{{ element.id }}</td>
                <td>{{ element.element }}</td>
                <td>{{ element.icon }}</td>
                <td>
                    <a href="{{ path('app_elements_show', {'id': element.id}) }}">show</a>
                    <a href="{{ path('app_elements_edit', {'id': element.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_elements_new') }}">Create new</a>
{% endblock %}
