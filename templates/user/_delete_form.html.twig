<form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer votre compte ? Cette action est irréversible.');">

    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">

    <div class="bg-red-600 flex items-center justify-center w-full p-8 my-8 rounded-lg">
        <button class="btn">Supprimer mon compte</button>
    </div>
</form>
