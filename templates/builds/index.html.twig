{% extends 'base.html.twig' %}

{% block title %}Builds{% endblock %}

{% block body %}

    <div class="bg-black flex items-center justify-center p-8 my-8">
        <h1 class="text-center text-2xl text-white">Builds</h1>
    </div>

    <!-- Section pour les filtres -->
    <div class="filtre"> </div>

    <!-- Lien vers la création de nouveaux builds -->
    <a href="{{ path('app_builds_new') }}">
        <div class="bg-black flex items-center justify-center w-full p-8 my-8">
            <p class="text-center text-2xl text-white">Créer de nouveaux builds</p>
        </div>
    </a>

    <!-- Affichage des builds -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 w-full h-full">
        {% for build in builds %}

            <a href="{{ path('app_builds_show', {'id': build.id}) }}">
                <div class="{{ build.personnage.element.element }} flex w-full p-[2%] gap-2">
                    <!-- Section pour les images des personnages et des moteurs -->
                    <div class="flex items-center justify-around min-h-full w-1/2">
                        <img src="{{ asset('images/icon/' ~ build.personnage.nomPersonnage|replace({' ': '_'}) ~ '.webp') }}" class="w-20 md:w-24 lg:w-26 rounded-lg" alt="Icone du personnage {{ build.personnage.nomPersonnage }}">
                        <img src="{{ asset('images/moteurs/' ~ build.moteur.nomMoteur|replace({' ': '_'}) ~ '.webp') }}" class="w-18 md:w-20 lg:w-24" alt="Moteur {{ build.moteur.nomMoteur }}">
                    </div>

                    <!-- Section pour les disques et leurs ensembles -->
                    <div class='flex flex-col justify-between gap-2 w-1/2'>
                        <div class='flex justify-around items-center h-full w-full'>
                            <img src="{{ asset('images/set/' ~ build.disque1.ensemble.nomSet|replace({' ': '_'}) ~ '.webp') }}" class='w-10 lg:w-14 h-10 lg:h-14' alt="Ensemble du disque 1">
                            <img src="{{ asset('images/set/' ~ build.disque2.ensemble.nomSet|replace({' ': '_'}) ~ '.webp') }}" class='w-10 lg:w-14 h-10 lg:h-14' alt="Ensemble du disque 2">
                            <img src="{{ asset('images/set/' ~ build.disque3.ensemble.nomSet|replace({' ': '_'}) ~ '.webp') }}" class='w-10 lg:w-14 h-10 lg:h-14' alt="Ensemble du disque 3">
                        </div>
                        <div class='flex justify-around items-center h-full w-full'>
                            <img src="{{ asset('images/set/' ~ build.disque4.ensemble.nomSet|replace({' ': '_'}) ~ '.webp') }}" class='w-10 lg:w-14 h-10 lg:h-14' alt="Ensemble du disque 4">
                            <img src="{{ asset('images/set/' ~ build.disque5.ensemble.nomSet|replace({' ': '_'}) ~ '.webp') }}" class='w-10 lg:w-14 h-10 lg:h-14' alt="Ensemble du disque 5">
                            <img src="{{ asset('images/set/' ~ build.disque6.ensemble.nomSet|replace({' ': '_'}) ~ '.webp') }}" class='w-10 lg:w-14 h-10 lg:h-14' alt="Ensemble du disque 6">
                        </div>
                    </div>
                </div>
            </a>

        {% else %}
            <!-- Message affiché si aucun build n'est créé -->
            <p>Vous n'avez créé aucun build.</p>
        {% endfor %}
    </div>

{% endblock %}
