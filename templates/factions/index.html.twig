{% extends 'base.html.twig' %}

{% block title %}Factions index{% endblock %}

{% block body %}
    <h1>Factions index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Faction</th>
                <th>Icon</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for faction in factions %}
            <tr>
                <td>{{ faction.id }}</td>
                <td>{{ faction.faction }}</td>
                <td>{{ faction.icon }}</td>
                <td>
                    <a href="{{ path('app_factions_show', {'id': faction.id}) }}">show</a>
                    <a href="{{ path('app_factions_edit', {'id': faction.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_factions_new') }}">Create new</a>
{% endblock %}
